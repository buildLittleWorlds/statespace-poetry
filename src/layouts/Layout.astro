---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      :root {
        --GW-serif-font-stack: "Source Serif Pro", "Apple Garamond",
          "Baskerville", "Libre Baskerville", "Droid Serif", "Times New Roman",
          "Times", serif, "Noto Emoji", "Quivira";
      }
      body {
        line-height: 1.4;
        font-size: 16px;
        padding: 0 25px;
        margin: 25px auto;
        max-width: 650px;
        font-family: var(--GW-serif-font-stack);
      }
      .navbar {
        text-align: center;
        font-size: 0.8em;
        margin-bottom: 20px;
      }
      .navbar a {
        text-decoration: none;
        color: #333;
        margin: 0 15px;
        display: inline-block;
      }
      .navbar a:hover {
        text-decoration: underline;
      }
      .navbar a.full {
        display: inline;
      }
      .navbar a.abbr {
        display: none;
      }
      @media (max-width: 480px) {
        .navbar a.full {
          display: none;
        }
        .navbar a.abbr {
          display: inline;
        }
        .navbar {
          font-size: 1em;
          margin-bottom: 10px;
        }
      }
      /* Add any additional styles here */
    </style>
  </head>
  <body>
    <Header />

    <main id="maincontent">
      <slot />
    </main>

    <!-- Newsletter signup form -->
    <div id="mc_embed_signup">
      <!-- Insert the newsletter signup form HTML here -->
    </div>

    <Footer />
  </body>
</html>
